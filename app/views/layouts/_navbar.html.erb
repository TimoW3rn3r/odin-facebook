<header class="py-2 px-2 md:px-6 flex justify-between bg-blue-800 text-white">
  <div class="font-bold text-4xl">
    <%= link_to "Railsbook", root_path %>
  </div>

  <div class="flex gap-2 items-center font-semibold">
    <% if user_signed_in? %>
      <div class="">
        <%= link_to "Home", posts_path %>
      </div>
      <div class="">
        <%= link_to "Profile", profile_path %>
      </div>
      <div class="text-sm text-gray-200">
        <% if current_user.profile_picture.attached? %>
          <%= button_to image_tag(current_user.profile_picture.variant(:thumb), class: "profile-picture-small"), destroy_user_session_path, method: :delete %>
        <% else %>
          <%= button_to image_tag("default.jpeg", class: "profile-picture-small"), destroy_user_session_path, method: :delete %>
        <% end %>
      </div>
    <% else %>
      <div class="text-sm text-gray-200 font-medium text-base">
        <%= link_to "Sign In", new_user_session_path %>
      </div>
    <% end %>
  </div>
</header>
