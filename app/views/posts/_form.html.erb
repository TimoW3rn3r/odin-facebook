<div class="my-4 bg-white px-8 py-4 rounded-md drop-shadow-lg">
  <%= form_with model: post, class: "flex flex-col gap-4" do |f| %>
    <%= f.text_area :body, placeholder: "What's on your mind, #{current_user.first_name}?", class: "bg-slate-200" %>
    <%= f.submit "Create Post", class: "btn h-min self-center" %>
  <% end %>
</div>
