<div class="my-2 px-4 py-2 flex flex-wrap items-center justify-between rounded-xl bg-slate-50">

  <div class="my-4 flex gap-2 items-center">
    <div>
      <% if user.profile_picture.attached? %>
        <%= image_tag user.profile_picture.variant(:thumb), class: "profile-picture" %>
      <% else %>
        <%= image_tag "default.jpeg", class: "profile-picture" %>
      <% end %>
    </div>

    <div class="font-semibold">
      <%= link_to user.full_name, user %>
    </div>
  </div>

  <%= render "friendships/buttons", user: user %>

</div>

